{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@assets/*": ["assets/*"],
      "@context/*": ["context/*"],
      "@theme": ["theme"],
      "@graphql/*": ["graphql/*"],
      "@utils/*": ["utils/*"],
      "@const/*": ["const/*"],
      "@hooks/*": ["hooks/*"],
      "@web/*": ["@web/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
